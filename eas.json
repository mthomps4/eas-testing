{
  "cli": {
    "version": ">= 0.47.0"
  },
  "build": {
    "base": {
      "node": "16.13.1",
      "yarn": "1.22.10",
      "android": {
        "image": "latest",
        "autoIncrement": "versionCode"
      },
      "ios": {
        "image": "latest",
        "cocoapods": "1.11.2",
        "autoIncrement": "buildNumber"
      }
    },
    "simulator": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true
      },
      "env": {
        "APP_ENV": "local"
      }
    },
    "development": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      },
      "env": {
        "APP_ENV": "development"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "APP_ENV": "preview"
      }
    },
    "alpha": {
      "extends": "base",
      "env": {
        "APP_ENV": "alpha"
      }
    },
    "production": {}
  },
  "submit": {
    "alpha": {},
    "production": {}
    }
  }

